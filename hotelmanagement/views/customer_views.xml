<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="customer_view_form">
			<field name="name">customer.form</field>
			<field name="model">hotelmanagement.customer</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name"></field>
								<field name="address"></field>
							</group>
							<group>
								<field name="mobile_number"></field>
								<field name="gender"></field>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="customer_tree">
			<field name="name">customer.view.tree</field>
			<field name="model">hotelmanagement.customer</field>
			<field name="arch" type="xml">
				<tree>				
					<field name="name"></field>
					<field name="mobile_number"></field>
				</tree>
			</field>
		</record>
	</data>	
</openerp>